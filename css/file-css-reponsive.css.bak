@media (max-width:995px){
	.header > a{
	    display: none;
	}
	.container-stack2{
		width:100%;
	}
	.menu-stack1 {
		width: 100%;
	}
	.menu-buider{
		width: 100%;
	}
	.menu-stack2 > img {
		width: 15%;
	}
	.menu-stack2 > img:hover {
		width: 25%;
	}
	.menu-stack2 > p.p-stao{
	    left:35%;
	}
	.menu-stack2 > p.p-hv{
	    left:39%;
	}
	.menu-stack2 > a{
	    left:45%;
	}
	.store-prd {
	    width: 263px;
	}
	.produc-detail-hover {
		height: 602px;
	}
	.info-book{
		width:100%;	
	}
	.img-info-book{
		width:100%;	
	}
	.member{
		display:none;
	}
	.mid-banner2{
		height:auto;
	}
	.banner-tast1, .banner-tast2, .banner-tast3 {
		float: none; 
		margin:0 auto;
	}
	.menu-container > .banner-qc{
		display:none;
	}
	.menu-stack1 {
		width: 100% !important;
	}
	.menu-content:hover ul.nav-menu-content {
		display: none;
	}
	.header li > a.menu-repon{
		display:none;
	}
}
@media (max-width:820px) {
	.header li:first-child{
		display: block !important;
		width: 50%;
		float: left !important;
	}
	.header li:nth-child(2){
		display:block !important;
		padding-right: 30px;
		padding-bottom: 40px;
	}
	.header li:nth-child(2) > a{
		padding:0;
	}
	.header li:nth-child(2) > a:hover{
		background:none;
	}
	.header li{
		float:none;
		display: none;
		text-align:right;
	}
	ul.header-ul{
	    padding-right: 40px;
	}
	.header li > a{
		padding: 20px 30px;
	}
}
